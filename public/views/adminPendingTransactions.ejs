<%- include('partials/header') %>

<div class="dashboard-container">
  <div class="dashboard-header">
    <h2>‚è≥ Pending Transactions - Admin Review</h2>
    <div class="header-info">
      <p>Review and approve transactions submitted by editors</p>
      <span class="count-badge"><%= transactions.length %> pending</span>
    </div>
  </div>

  <div class="dashboard-section">
    <div class="section-header">
      <h3>üìã Awaiting Admin Approval</h3>
      <div class="section-actions">
        <a href="/admin/dashboard"
          ><button class="btn-secondary">‚Üê Back to Dashboard</button></a
        >
      </div>
    </div>

    <% if (transactions.length === 0) { %>
    <div class="empty-state">
      <div class="empty-icon">‚úÖ</div>
      <h3>All Caught Up!</h3>
      <p>
        No pending transactions to review. Great job staying on top of
        approvals!
      </p>
    </div>
    <% } else { %>
    <div class="pending-transactions">
      <% transactions.forEach(transaction => { %>
      <div class="transaction-card">
        <div class="transaction-header">
          <div class="transaction-title">
            <h4><%= transaction.description %></h4>
            <span class="budget-badge"><%= transaction.budgetId.name %></span>
          </div>
          <div class="transaction-amount">
            ‚Çπ<%= transaction.amount.toLocaleString() %>
          </div>
        </div>

        <div class="transaction-details">
          <div class="detail-row">
            <span class="detail-label">Category:</span>
            <span
              class="category-badge category-<%= transaction.category || 'other' %>"
            >
              <%= transaction.category || 'Other' %>
            </span>
          </div>

          <div class="detail-row">
            <span class="detail-label">Department:</span>
            <span class="detail-value"
              ><%= transaction.budgetId.department %></span
            >
          </div>

          <div class="detail-row">
            <span class="detail-label">Submitted by:</span>
            <span class="detail-value"
              ><%= transaction.createdBy.name %> (<%=
              transaction.createdBy.email %>)</span
            >
          </div>

          <div class="detail-row">
            <span class="detail-label">Submitted:</span>
            <span class="detail-value"
              ><%= new Date(transaction.createdAt).toLocaleDateString() %></span
            >
          </div>

          <% if (transaction.notes) { %>
          <div class="detail-row">
            <span class="detail-label">Notes:</span>
            <span class="detail-value"><%= transaction.notes %></span>
          </div>
          <% } %>
        </div>

        <div class="transaction-receipt">
          <% if (transaction.receipt && transaction.receipt.url) { %>
          <div class="receipt-section">
            <h5>üìÑ Receipt</h5>
            <div class="receipt-preview">
              <img
                src="<%= transaction.receipt.url %>"
                alt="Receipt Preview"
                class="receipt-image"
              />
              <div class="receipt-info">
                <p>
                  <strong>File:</strong> <%= transaction.receipt.filename ||
                  'Receipt' %>
                </p>
                <p>
                  <strong>Size:</strong> <%= (transaction.receipt.size /
                  1024).toFixed(1) %> KB
                </p>
                <a
                  href="<%= transaction.receipt.url %>"
                  target="_blank"
                  class="receipt-link"
                  >View Full Receipt</a
                >
              </div>
            </div>
          </div>
          <% } else { %>
          <div class="no-receipt">
            <span class="no-receipt-icon">üìÑ</span>
            <span>No receipt uploaded</span>
          </div>
          <% } %>
        </div>

        <div class="transaction-status">
          <div class="status-info">
            <span class="status-badge status-pending">‚è≥ Pending Approval</span>
            <span class="submitted-by">Awaiting admin review</span>
          </div>
          <div class="transaction-actions">
            <form
              method="post"
              action="/transaction/<%= transaction._id %>/approve"
              style="display: inline"
            >
              <button type="submit" class="btn-approve">‚úÖ Approve</button>
            </form>
            <form
              method="post"
              action="/transaction/<%= transaction._id %>/reject"
              style="display: inline"
            >
              <button type="submit" class="btn-reject">‚ùå Reject</button>
            </form>
            <button
              onclick="viewTransaction('<%= transaction._id %>')"
              class="btn-view"
            >
              üëÅÔ∏è View Details
            </button>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
    <% } %>
  </div>
</div>

<style>
  .dashboard-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
    padding: 2rem;
    background: var(--card-gradient);
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-light);
  }

  .header-info {
    text-align: right;
  }

  .header-info p {
    margin: 0 0 0.5rem 0;
    color: var(--secondary-color);
  }

  .count-badge {
    background: rgba(245, 158, 11, 0.1);
    color: #d97706;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-weight: 600;
    font-size: 1.1rem;
  }

  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
  }

  .section-actions {
    display: flex;
    gap: 1rem;
  }

  .pending-transactions {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .transaction-card {
    background: white;
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-light);
    border-left: 4px solid #f59e0b;
    overflow: hidden;
    transition: var(--transition);
  }

  .transaction-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-medium);
  }

  .transaction-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    padding: 1.5rem;
    background: rgba(245, 158, 11, 0.05);
    border-bottom: 1px solid rgba(245, 158, 11, 0.1);
  }

  .transaction-title h4 {
    margin: 0 0 0.5rem 0;
    color: #1e293b;
    font-family: "Montserrat", sans-serif;
  }

  .budget-badge {
    background: rgba(37, 99, 235, 0.1);
    color: var(--primary-color);
    padding: 0.25rem 0.75rem;
    border-radius: 12px;
    font-size: 0.8rem;
    font-weight: 500;
  }

  .transaction-amount {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--primary-color);
  }

  .transaction-details {
    padding: 1.5rem;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
  }

  .detail-row {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .detail-label {
    font-size: 0.9rem;
    color: var(--secondary-color);
    font-weight: 500;
  }

  .detail-value {
    color: #1e293b;
    font-weight: 500;
  }

  .category-badge {
    padding: 0.25rem 0.75rem;
    border-radius: 12px;
    font-size: 0.8rem;
    font-weight: 500;
    text-transform: capitalize;
    display: inline-block;
    width: fit-content;
  }

  .category-office_supplies {
    background: rgba(59, 130, 246, 0.1);
    color: #1d4ed8;
  }
  .category-travel {
    background: rgba(16, 185, 129, 0.1);
    color: #047857;
  }
  .category-equipment {
    background: rgba(245, 158, 11, 0.1);
    color: #d97706;
  }
  .category-utilities {
    background: rgba(139, 92, 246, 0.1);
    color: #7c3aed;
  }
  .category-maintenance {
    background: rgba(239, 68, 68, 0.1);
    color: #dc2626;
  }
  .category-other {
    background: rgba(107, 114, 128, 0.1);
    color: #374151;
  }

  .transaction-receipt {
    padding: 0 1.5rem 1.5rem 1.5rem;
  }

  .receipt-section h5 {
    margin: 0 0 1rem 0;
    color: var(--secondary-color);
    font-size: 1rem;
  }

  .receipt-preview {
    display: flex;
    gap: 1rem;
    background: #f8f9fa;
    padding: 1rem;
    border-radius: var(--border-radius);
    border: 1px solid #e2e8f0;
  }

  .receipt-image {
    width: 80px;
    height: 80px;
    object-fit: cover;
    border-radius: var(--border-radius);
    border: 1px solid #e2e8f0;
  }

  .receipt-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .receipt-info p {
    margin: 0.25rem 0;
    color: var(--secondary-color);
    font-size: 0.9rem;
  }

  .receipt-link {
    color: var(--primary-color);
    text-decoration: none;
    font-weight: 500;
    margin-top: 0.5rem;
    display: inline-block;
  }

  .receipt-link:hover {
    text-decoration: underline;
  }

  .no-receipt {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--secondary-color);
    font-style: italic;
    padding: 1rem;
    background: #f8f9fa;
    border-radius: var(--border-radius);
    border: 1px solid #e2e8f0;
  }

  .no-receipt-icon {
    font-size: 1.2rem;
  }

  .transaction-status {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem;
    background: rgba(245, 158, 11, 0.05);
    border-top: 1px solid rgba(245, 158, 11, 0.1);
  }

  .status-info {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .status-badge {
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.9rem;
    font-weight: 600;
    text-transform: capitalize;
    display: inline-block;
    width: fit-content;
  }

  .status-pending {
    background: rgba(245, 158, 11, 0.1);
    color: #d97706;
  }

  .submitted-by {
    font-size: 0.8rem;
    color: var(--secondary-color);
  }

  .transaction-actions {
    display: flex;
    gap: 0.75rem;
  }

  .btn-approve,
  .btn-reject,
  .btn-view {
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: var(--border-radius);
    font-weight: 500;
    cursor: pointer;
    transition: var(--transition);
    text-decoration: none;
    display: inline-block;
  }

  .btn-approve {
    background: rgba(16, 185, 129, 0.1);
    color: #047857;
    border: 1px solid rgba(16, 185, 129, 0.3);
  }

  .btn-approve:hover {
    background: rgba(16, 185, 129, 0.2);
    transform: translateY(-1px);
  }

  .btn-reject {
    background: rgba(239, 68, 68, 0.1);
    color: #dc2626;
    border: 1px solid rgba(239, 68, 68, 0.3);
  }

  .btn-reject:hover {
    background: rgba(239, 68, 68, 0.2);
    transform: translateY(-1px);
  }

  .btn-view {
    background: var(--primary-color);
    color: white;
  }

  .btn-view:hover {
    background: var(--primary-dark);
    transform: translateY(-1px);
  }

  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    background: var(--card-gradient);
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-light);
  }

  .empty-icon {
    font-size: 4rem;
    margin-bottom: 1rem;
  }

  .empty-state h3 {
    margin-bottom: 1rem;
    color: var(--secondary-color);
  }

  .empty-state p {
    margin-bottom: 2rem;
    color: var(--secondary-color);
  }

  @media (max-width: 768px) {
    .dashboard-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }

    .header-info {
      text-align: left;
    }

    .section-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }

    .transaction-header {
      flex-direction: column;
      gap: 1rem;
    }

    .transaction-details {
      grid-template-columns: 1fr;
    }

    .receipt-preview {
      flex-direction: column;
    }

    .transaction-status {
      flex-direction: column;
      gap: 1rem;
      align-items: flex-start;
    }

    .transaction-actions {
      width: 100%;
      justify-content: stretch;
    }

    .btn-approve,
    .btn-reject,
    .btn-view {
      flex: 1;
      text-align: center;
    }
  }
</style>

<script>
  function viewTransaction(transactionId) {
    alert("View transaction: " + transactionId);
  }
</script>

<%- include('partials/footer') %>

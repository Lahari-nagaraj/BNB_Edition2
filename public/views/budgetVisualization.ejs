<script>
  let charts = {};

  const budgetSpent = window.budgetData.spent;
  const budgetRemaining = window.budgetData.remaining;
  const budgetTotal = window.budgetData.totalBudget;

  document.addEventListener("DOMContentLoaded", function () {
    initializeCharts();
    loadAnomalies();
    loadFeedback();
    loadHierarchy();
    loadAIData();

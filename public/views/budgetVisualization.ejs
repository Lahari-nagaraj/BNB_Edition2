  function createSimpleLineChart(title, data) {
    const maxValue = Math.max(...data.map(item => item.amount));
    let html = '<div style="padding: 1rem; position: relative;">';
    
    // Create SVG for line chart
    html += '<svg width="100%" height="200" style="border: 1px solid #e5e7eb; border-radius: 8px;">';
    
    data.forEach((item, index) => {
      const x = (index / (data.length - 1)) * 100;
      const y = 100 - ((item.amount / maxValue) * 100);
      
      if (index === 0) {
        html += `<path d="M ${x}% ${y}%" stroke="#3b82f6" stroke-width="3" fill="none" />`;
      } else {
        const prevX = ((index - 1) / (data.length - 1)) * 100;
        const prevY = 100 - ((data[index - 1].amount / maxValue) * 100);
        html += `<path d="M ${prevX}% ${prevY}% L ${x}% ${y}%" stroke="#3b82f6" stroke-width="3" fill="none" />`;
      }
      
      html += `<circle cx="${x}%" cy="${y}%" r="4" fill="#3b82f6" />`;
      html += `<text x="${x}%" y="95%" text-anchor="middle" style="font-size: 12px; fill: #64748b;">${item.month}</text>`;
    });
    
    html += '</svg>';
    html += '</div>';
    return html;
  }


<%- include('partials/header') %>
<div class="dashboard-container">
  <div class="dashboard-header">
    <h2>ğŸ“ Editor Dashboard</h2>
    <div class="user-info">
      <span class="user-name">Welcome, <%= session.userName %></span>
      <div class="user-stats">
        <span class="stat">Level <%= user.level %></span>
        <span class="stat">â­ <%= user.points %> points</span>
        <span class="stat">ğŸ† <%= user.badges.length %> badges</span>
      </div>
    </div>
  </div>

  <!-- Quick Stats -->
  <div class="stats-grid">
    <div class="stat-card">
      <h3>ğŸ“Š Assigned Budgets</h3>
      <p class="stat-number"><%= assignedBudgets.length %></p>
    </div>
    <div class="stat-card">
      <h3>ğŸ“‹ Pending Transactions</h3>
      <p class="stat-number"><%= pendingTransactions %></p>
    </div>
    <div class="stat-card">
      <h3>âœ… Approved Today</h3>
      <p class="stat-number"><%= approvedToday %></p>
    </div>
    <div class="stat-card">
      <h3>ğŸ“„ Receipts Uploaded</h3>
      <p class="stat-number"><%= user.receiptsUploaded %></p>
    </div>
  </div>

  <!-- Badges Section -->
  <% if (user.badges && user.badges.length > 0) { %>
  <div class="dashboard-section">
    <h3>ğŸ† Your Badges</h3>
    <div class="badges-grid">
      <% user.badges.forEach(badge => { %>
      <div class="badge-item">
        <div class="badge-icon"><%= badge.icon %></div>
        <div class="badge-info">
          <h4><%= badge.name %></h4>
          <p><%= badge.description %></p>
          <small>Earned: <%= new Date(badge.earnedAt).toLocaleDateString() %></small>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
  <% } %>

  <!-- Assigned Budgets -->
  <div class="dashboard-section">
    <h3>ğŸ“Š Your Assigned Budgets</h3>
    <div class="cards">
      <% assignedBudgets.forEach(budget => { %>
      <div class="card">
        <div class="card-header">
          <h4><%= budget.name %></h4>
          <span class="status-badge status-<%= budget.status %>"><%= budget.status %></span>
        </div>
        <p><strong>Department:</strong> <%= budget.department %></p>
        <p><strong>Total Budget:</strong> â‚¹<%= budget.totalBudget.toLocaleString() %></p>
        <p><strong>Remaining:</strong> â‚¹<%= budget.remaining.toLocaleString() %></p>
        <div class="progress-bar">
          <div class="progress-fill" style="width: <%= (budget.spent / budget.totalBudget * 100) %>%"></div>
        </div>
        <div class="card-actions">
          <a href="/editor/budget/<%= budget._id %>"><button>Manage Budget</button></a>
          <a href="/editor/budget/<%= budget._id %>/transactions"><button class="btn-secondary">View Transactions</button></a>
        </div>
      </div>
      <% }) %>
    </div>
  </div>

  <!-- Recent Transactions -->
  <div class="dashboard-section">
    <h3>ğŸ“‹ Recent Transactions</h3>
    <div class="transactions-list">
      <% recentTransactions.forEach(transaction => { %>
      <div class="transaction-item">
        <div class="transaction-info">
          <h4><%= transaction.description %></h4>
          <p>Amount: â‚¹<%= transaction.amount.toLocaleString() %></p>
          <p>Date: <%= new Date(transaction.createdAt).toLocaleDateString() %></p>
        </div>
        <div class="transaction-status">
          <span class="status-badge status-<%= transaction.status %>"><%= transaction.status %></span>
          <% if (transaction.receipt && transaction.receipt.url) { %>
          <span class="receipt-badge">ğŸ“„ Receipt</span>
          <% } %>
        </div>
      </div>
      <% }) %>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="dashboard-section">
    <h3>âš¡ Quick Actions</h3>
    <div class="quick-actions">
      <a href="/editor/transaction/new"><button class="btn-primary">â• Add Transaction</button></a>
      <a href="/editor/receipts/upload"><button class="btn-secondary">ğŸ“„ Upload Receipt</button></a>
      <a href="/editor/transactions/pending"><button class="btn-secondary">â³ Pending Approvals</button></a>
    </div>
  </div>

  <!-- AI Assistant -->
  <div class="dashboard-section">
    <h3>ğŸ¤– AI Assistant</h3>
    <div class="ai-chat-container">
      <div id="ai-messages" class="ai-messages"></div>
      <div class="ai-input">
        <input type="text" id="ai-input" placeholder="Ask me about your budgets, transactions, or receipts...">
        <button id="ai-send">Send</button>
      </div>
    </div>
  </div>
</div>

<style>

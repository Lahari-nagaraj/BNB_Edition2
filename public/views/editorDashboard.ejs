.user-info {
  text-align: right;
}

.user-name {
  font-size: 1.2rem;
  font-weight: 600;
  color: #1e293b;
  display: block;
  margin-bottom: 0.5rem;
}

.user-stats {
  display: flex;
  gap: 1rem;
}

.user-stats .stat {
  background: rgba(37, 99, 235, 0.1);
  padding: 0.25rem 0.75rem;
  border-radius: 20px;
  font-size: 0.9rem;
  color: var(--primary-color);
  font-weight: 500;
}


  margin-bottom: 2rem;
  color: var(--secondary-color);
}

@media (max-width: 768px) {
  .dashboard-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 1rem;
  }
  
  .budget-info {
    text-align: left;
  }
  
  .section-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 1rem;
  }
  
  .transactions-table {
    overflow-x: auto;
  }
  
  .transactions-table table {
    min-width: 800px;
  }
}
</style>


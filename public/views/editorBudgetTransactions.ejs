<%- include('partials/header') %>

<div class="dashboard-container">
  <div class="dashboard-header">
    <h2>üìã Transactions - <%= budget.name %></h2>
    <div class="budget-info">
      <p><strong>Department:</strong> <%= budget.department %></p>
      <p><strong>Total Budget:</strong> ‚Çπ<%= budget.totalBudget.toLocaleString() %></p>
      <p><strong>Remaining:</strong> ‚Çπ<%= budget.remaining.toLocaleString() %></p>
    </div>
  </div>

  <div class="dashboard-section">
    <div class="section-header">
      <h3>üìä All Transactions</h3>
      <div class="section-actions">
        <a href="/editor/transaction/new"><button class="btn-primary">‚ûï Add Transaction</button></a>
        <a href="/editor/dashboard"><button class="btn-secondary">‚Üê Back to Dashboard</button></a>
      </div>
    </div>

    <% if (transactions.length === 0) { %>
    <div class="empty-state">
      <div class="empty-icon">üìã</div>
      <h3>No Transactions Yet</h3>
      <p>Start by adding your first transaction for this budget.</p>
      <a href="/editor/transaction/new"><button class="btn-primary">Add First Transaction</button></a>
    </div>
    <% } else { %>
    <div class="transactions-table">
      <table>
        <thead>
          <tr>
            <th>Description</th>
            <th>Amount</th>
            <th>Category</th>
            <th>Vendor</th>
            <th>Date</th>
            <th>Status</th>
            <th>Receipt</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% transactions.forEach(transaction => { %>
          <tr>
            <td>
              <div class="transaction-description">
                <strong><%= transaction.description %></strong>
                <% if (transaction.notes) { %>
                <br><small class="transaction-notes"><%= transaction.notes %></small>
                <% } %>
              </div>
            </td>
            <td class="amount">‚Çπ<%= transaction.amount.toLocaleString() %></td>
            <td>
              <span class="category-badge category-<%= transaction.category || 'other' %>">
                <%= transaction.category || 'Other' %>
              </span>
            </td>
            <td><%= transaction.vendor || '-' %></td>
            <td><%= new Date(transaction.createdAt).toLocaleDateString() %></td>
            <td>
              <span class="status-badge status-<%= transaction.status %>">
                <%= transaction.status %>
              </span>
            </td>
            <td>
              <% if (transaction.receipt && transaction.receipt.url) { %>
              <a href="<%= transaction.receipt.url %>" target="_blank" class="receipt-link">
                üìÑ View Receipt
              </a>
              <% } else { %>
              <span class="no-receipt">No Receipt</span>
              <% } %>
            </td>
            <td>
              <div class="action-buttons">
                <button onclick="viewTransaction('<%= transaction._id %>')" class="btn-small btn-info">üëÅÔ∏è</button>
                <% if (transaction.status === 'pending') { %>
                <button onclick="editTransaction('<%= transaction._id %>')" class="btn-small btn-warning">‚úèÔ∏è</button>
                <% } %>
              </div>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <% } %>
  </div>
</div>

<style>

<%- include('partials/header') %>
<div class="container">
  <% if (error) { %>
    <div class="error-container">
      <h2>‚ùå Verification Failed</h2>
      <p><%= error %></p>
      <a href="/"><button>Return to Home</button></a>
    </div>
  <% } else { %>
    <div class="verification-success">
      <div class="verification-header">
        <h2>‚úÖ Transaction Verified</h2>
        <p class="verification-subtitle">This transaction has been cryptographically verified</p>
      </div>
      
      <div class="verification-details">
        <div class="detail-card">
          <h3>Transaction Details</h3>
          <div class="detail-grid">
            <div class="detail-item">
              <strong>Description:</strong>
              <span><%= transaction.description %></span>
            </div>
            <div class="detail-item">
              <strong>Amount:</strong>
              <span class="amount">‚Çπ<%= transaction.amount.toLocaleString() %></span>
            </div>
            <div class="detail-item">
              <strong>Date:</strong>
              <span><%= new Date(transaction.createdAt).toLocaleDateString() %></span>
            </div>
            <div class="detail-item">
              <strong>Status:</strong>
              <span class="status-badge status-<%= transaction.status %>"><%= transaction.status %></span>
            </div>
            <% if (transaction.notes) { %>
            <div class="detail-item full-width">
              <strong>Notes:</strong>
              <span><%= transaction.notes %></span>
            </div>
            <% } %>
          </div>
        </div>

        <div class="detail-card">
          <h3>Fund Flow Hierarchy</h3>
          <div class="hierarchy-flow">
            <div class="hierarchy-item">
              <h4>üìä Budget</h4>
              <p><%= transaction.budgetId.name %></p>
            </div>
            <div class="arrow">‚Üì</div>
            <div class="hierarchy-item">
              <h4>üè¢ Department</h4>
              <p><%= transaction.departmentId.name %></p>
            </div>
            <div class="arrow">‚Üì</div>
            <div class="hierarchy-item">
              <h4>üìã Project</h4>
              <p><%= transaction.projectId.name %></p>
            </div>
            <div class="arrow">‚Üì</div>
            <div class="hierarchy-item">
              <h4>üè™ Vendor</h4>
              <p><%= transaction.vendorId.name %></p>
            </div>
          </div>
        </div>

        <div class="detail-card">
          <h3>Cryptographic Verification</h3>
          <div class="crypto-details">
            <div class="hash-display">
              <strong>Transaction Hash:</strong>
              <code class="hash-code"><%= transaction.transactionHash %></code>
            </div>
            <div class="verification-info">
              <p>üîí This transaction is cryptographically secured using SHA-256 hashing</p>
              <p>üìã All changes are logged in the audit trail</p>
              <p>‚úÖ This hash can be used to verify transaction integrity</p>
            </div>
          </div>
        </div>

        <% if (transaction.approvedBy) { %>
        <div class="detail-card">
          <h3>Approval Details</h3>
          <div class="approval-details">
            <p><strong>Approved By:</strong> <%= transaction.approvedBy %></p>
            <p><strong>Approved At:</strong> <%= new Date(transaction.approvedAt).toLocaleString() %></p>
          </div>
        </div>
        <% } %>
      </div>

      <div class="verification-actions">
        <a href="/budget/<%= transaction.budgetId._id %>"><button>View Full Budget</button></a>
        <a href="/"><button class="btn-secondary">Return to Home</button></a>
      </div>
    </div>
  <% } %>
</div>

<style>
.container {
  max-width: 800px;
  margin: 0 auto;
  padding: 2rem;
}

.error-container {
  text-align: center;
  padding: 3rem;
  background: var(--card-gradient);
  border-radius: var(--border-radius-lg);
  box-shadow: var(--shadow-light);
}

.verification-success {
  background: var(--card-gradient);
  border-radius: var(--border-radius-lg);
  box-shadow: var(--shadow-light);
  overflow: hidden;
}

.verification-header {
  background: var(--background-gradient);
  color: white;
  padding: 2rem;
  text-align: center;
}

.verification-header h2 {
  font-size: 2rem;
  margin-bottom: 0.5rem;
  font-family: 'Montserrat', sans-serif;
}

.verification-subtitle {
  opacity: 0.9;
  font-size: 1.1rem;
}

.verification-details {
  padding: 2rem;
}

.detail-card {
  background: rgba(255, 255, 255, 0.5);
  border-radius: var(--border-radius);
  padding: 1.5rem;
  margin-bottom: 1.5rem;
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.detail-card h3 {
  font-family: 'Montserrat', sans-serif;
  font-weight: 600;
  margin-bottom: 1rem;
  color: #1e293b;
}

.detail-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 1rem;
}

.detail-item {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
}

.detail-item.full-width {
  grid-column: 1 / -1;
}

.detail-item strong {
  color: #64748b;
  font-size: 0.9rem;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.detail-item span {
  color: #1e293b;
  font-weight: 500;
}

.amount {
  font-size: 1.25rem;
  font-weight: 700;
  color: var(--primary-color);
}

.hierarchy-flow {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1rem;
}

.hierarchy-item {
  background: rgba(37, 99, 235, 0.1);
  padding: 1rem;
  border-radius: var(--border-radius);
  text-align: center;
  min-width: 200px;
  border: 2px solid rgba(37, 99, 235, 0.2);
}

.hierarchy-item h4 {
  margin-bottom: 0.5rem;
  color: var(--primary-color);
  font-family: 'Montserrat', sans-serif;
}

.arrow {
  font-size: 1.5rem;
  color: var(--primary-color);
  font-weight: bold;
}

.crypto-details {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.hash-display {
  background: rgba(0, 0, 0, 0.05);
  padding: 1rem;
  border-radius: var(--border-radius);
  border: 1px solid rgba(0, 0, 0, 0.1);
}

.hash-code {
  display: block;
  font-family: 'Courier New', monospace;
  font-size: 0.9rem;
  word-break: break-all;
  background: rgba(0, 0, 0, 0.05);
  padding: 0.5rem;
  border-radius: 4px;
  margin-top: 0.5rem;
}

.verification-info {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.verification-info p {
  margin: 0;
  color: #64748b;
  font-size: 0.95rem;
}

.approval-details {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.verification-actions {
  padding: 2rem;
  display: flex;
  gap: 1rem;
  justify-content: center;
  background: rgba(255, 255, 255, 0.5);
}

.btn-secondary {
  background: #64748b;
  color: white;
}

@media (max-width: 768px) {
  .hierarchy-flow {
    flex-direction: column;
  }
  
  .arrow {
    transform: rotate(90deg);
  }
  
  .verification-actions {
    flex-direction: column;
  }
  
  .detail-grid {
    grid-template-columns: 1fr;
  }
}
</style>

<%- include('partials/footer') %>
